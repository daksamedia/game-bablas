<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="hielo77" version="1.0">

	<name>Santa Zombies</name>
	<description>Zombies have invaded Chirstmas land. Santa has to pick gifts on his way to safety . When are these zombies to give up??</description>
	<author href="http://blogs.msdn.com/b/gamewords777/" email="diegoli@microsoft.com">hielo777</author>

	<icon src="icon-128.png" width="128" height="128" />
	<icon src="icon-256.png" width="256" height="256" gap:role="default" />

	<preference name="permissions" value="none"/>
	<preference name="android-targetSdkVersion" value="21" />

	<feature name="http://api.phonegap.com/1.0/network"/>
	<gap:plugin name="org.apache.cordova.media" source="npm" />

	<preference name="orientation" value="default" />
	<preference name="fullscreen" value="false" />

	<preference name="deployment-target" value="7.0" />
	<preference name="android-minSdkVersion" value="16" />
	<preference name="target-device" value="universal" />

	<feature name="CDVWKWebViewEngine">
		<param name="ios-package" value="CDVWKWebViewEngine" />
	</feature>

	<preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />

	<gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<access origin="*" />

	<gap:plugin name="org.apache.cordova.inappbrowser" source="npm" />

	<!-- Optional splash screen image, e.g.: -->
	<!-- <gap:splash src="splash.png" width="1024" height="768" /> -->

</widget>
